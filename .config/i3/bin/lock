#!/bin/bash

has() {
  hash "$1" 2>/dev/null
}

i3blur() {
  local tmpbg="/tmp/screen.png"
  local icon="$HOME/.config/i3/lock/icon.png"
  [[ "$?" -gt 0 ]] && icon="$1"

  scrot $tmpbg
  if has convert
  then
    convert $tmpbg -blur 2x2 $tmpbg
    # convert $tmpbg -scale 10% -scale 1000% $tmpbg
    [[ -f "$icon" ]] && convert $tmpbg $icon -gravity center -composite -matte $tmpbg
  fi
  # dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop
  i3lock --image $tmpbg # --no-unlock-indicator # --show-failed-attempts
  rm $tmpbg # mktemp?
}

if has i3lock
then
  # i3blur "$@"
  i3lock --blur=1 --indicator --keylayout 0 \
    --textcolor=ffffff00 --insidecolor=00000000 --ringcolor=ffffff3e \
    --ringvercolor=00000000 --insidevercolor=0000001c \
    --ringwrongcolor=00000055 --insidewrongcolor=0000001c \
    --keyhlcolor=00000080 --line-uses-inside
    # --separatorcolor=22222260 --linecolor=ffffff00
elif has slock
then
  slock
else
  exit 1
fi
